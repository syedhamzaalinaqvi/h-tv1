{
  "version": 2,
  "builds": [
    {
      "src": "api_server.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api_server.py"
    },
    {
      "src": "/(.*)",
      "dest": "/api_server.py"
    }
  ],
  "env": {
    "TMDB_API_KEY": "@tmdb-api-key"
  },
  "functions": {
    "api_server.py": {
      "runtime": "python3.9"
    }
  }
}
